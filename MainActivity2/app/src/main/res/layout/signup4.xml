<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<android.support.design.widget.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">
		<android.support.v7.widget.Toolbar
			android:id="@+id/_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"/>
	</android.support.design.widget.AppBarLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		>
		<LinearLayout
			android:id="@+id/linear3"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="2dp"
			android:gravity="center_horizontal|top"
			android:orientation="vertical"
			android:weightSum="24"
			android:layout_gravity="bottom">
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="35dp"
				android:padding="8dp"
				android:background="#8BC34A"
				android:text="كلمة السر"
				android:textSize="12sp"
				android:textColor="#000000"
				android:layout_gravity="center_horizontal|top"
				android:layout_weight="1"/>
			<EditText
				android:id="@+id/pass"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:padding="8dp"
				android:textSize="12sp"
				android:textColor="#000000"
				android:hint="اضغط هنا للكتابة"
				android:textColorHint="#607D8B"
				android:inputType="textPassword"
				android:layout_gravity="center_horizontal|top"
				android:layout_weight="1"/>
			<LinearLayout
				android:id="@+id/passdirecln"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="right"
				android:orientation="horizontal"
				android:layout_weight="3">
				<TextView
					android:id="@+id/passdirec"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#D32F2F"
					android:text="يجب ان لا تقل كلمة السر عن 8 احرف. الرجاء كتابة كلمة السر على ورقة و الاحتفاظ بها. "
					android:textSize="12sp"
					android:textColor="#000000"/>
			</LinearLayout>
			<TextView
				android:id="@+id/passcnfrmv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="35dp"
				android:padding="8dp"
				android:background="#9CCC65"
				android:text="اعادة كتابة كلمة السر"
				android:textSize="12sp"
				android:textColor="#000000"
				android:layout_gravity="center_horizontal|top"
				android:layout_weight="2"/>
			<EditText
				android:id="@+id/passconfirm"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:padding="8dp"
				android:textSize="12sp"
				android:textColor="#000000"
				android:hint="اضغط هنا للكتابة"
				android:textColorHint="#607D8B"
				android:inputType="textPassword"
				android:layout_gravity="center_horizontal|top"
				android:layout_weight="1"/>
			<Button
				android:id="@+id/button1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="35dp"
				android:padding="8dp"
				android:background="#EF5350"
				android:text="اتصل"
				android:textSize="12sp"
				android:textColor="#000000"
				android:layout_gravity="center_horizontal|bottom"
				android:layout_weight="2"/>
			<TextView
				android:id="@+id/textview3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="15dp"
				android:padding="8dp"
				android:background="#B71C1C"
				android:text="عند ضغط اتصل سوف يقوم هاتفك تلقائيا و مجانا بإجراء اتصال لثوان معدودة. لن يرد أحد على إلاتصال. هذا إلاجراء هو فقط لتأكيد رقم هاتفكم. "
				android:textSize="12sp"
				android:textColor="#000000"
				android:layout_gravity="center_horizontal|top|bottom"
				android:layout_weight="4"/>
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="bottom"
				android:layout_weight="3">
				<Button
					android:id="@+id/next"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#F44336"
					android:text="إنهاء التسجيل"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_gravity="bottom"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</android.support.design.widget.CoordinatorLayout>
